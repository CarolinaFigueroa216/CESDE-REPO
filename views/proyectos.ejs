<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Subir Proyecto - CESDE</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/proyectos.css">
</head>
<body>
  <div class="container py-5">
    <!-- Encabezado con user info -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Subir Proyecto Académico</h1>
      <div>
        <span class="text-muted me-3">
          <i class="bi bi-person-circle me-1"></i>
          <%= user.nombres_y_apellidos %>
        </span>
        <a href="/welcome" class="btn btn-outline-secondary btn-sm">
          <i class="bi bi-arrow-left"></i> Volver
        </a>
      </div>
    </div>

    <!-- Formulario para subir proyectos -->
    <div class="project-form">
      <form id="projectForm">
        <!-- Título del Proyecto -->
        <div class="mb-3">
          <label for="projectTitle" class="form-label">
            Título del Proyecto <span class="text-danger">*</span>
          </label>
          <input 
            type="text" 
            class="form-control" 
            id="projectTitle" 
            placeholder="Ej: Sistema de gestión de biblioteca"
            required 
          />
          <small class="text-muted">Máximo 200 caracteres</small>
        </div>

        <!-- Descripción -->
        <div class="mb-3">
          <label for="projectDescription" class="form-label">
            Descripción <span class="text-danger">*</span>
          </label>
          <textarea 
            class="form-control" 
            id="projectDescription" 
            rows="4" 
            placeholder="Describe tu proyecto, objetivos y resultados..."
            required 
          ></textarea>
          <small class="text-muted">Máximo 1000 caracteres</small>
        </div>

        <!-- Tipo de Proyecto -->
        <div class="mb-3">
          <label for="projectType" class="form-label">
            Tipo de Proyecto <span class="text-danger">*</span>
          </label>
          <select class="form-select" id="projectType" required>
            <option value="">-- Seleccionar --</option>
            <option value="tesis">Tesis</option>
            <option value="codigo">Código de Desarrollo</option>
            <option value="practica">Práctica Profesional</option>
            <option value="investigacion">Investigación</option>
            <option value="otro">Otro</option>
          </select>
        </div>

        <!-- Archivos -->
        <div class="mb-3">
          <label for="projectFiles" class="form-label">
            Archivos del Proyecto <span class="text-danger">*</span>
          </label>
          <input 
            type="file" 
            class="form-control" 
            id="projectFiles" 
            multiple 
            accept=".pdf,.zip,.docx,.xlsx,.txt,.pptx"
            required
          />
          <small class="text-muted">
            Formatos permitidos: PDF, ZIP, DOCX, XLSX, TXT, PPTX (máximo 50MB por archivo)
          </small>
          <div id="filesList" class="mt-2"></div>
        </div>

        <!-- Imágenes -->
        <div class="mb-3">
          <label for="projectImages" class="form-label">
            Imágenes de Demostración <span class="text-muted">(Opcional)</span>
          </label>
          <input 
            type="file" 
            class="form-control" 
            id="projectImages" 
            multiple 
            accept="image/*"
          />
          <small class="text-muted">JPG, PNG, GIF (máximo 50MB por imagen)</small>
          <div id="imagePreviews" class="d-flex flex-wrap mt-3"></div>
        </div>

        <!-- Video URL -->
        <div class="mb-3">
          <label for="projectVideoUrl" class="form-label">
            Video - Enlace (URL)
          </label>
          <input 
            type="url" 
            class="form-control" 
            id="projectVideoUrl" 
            placeholder="https://youtube.com/watch?v=... o https://vimeo.com/..."
          />
          <small class="text-muted">YouTube, Vimeo u otro proveedor de video</small>
        </div>

        <!-- Video Archivo -->
        <div class="mb-3">
          <label for="projectVideoFile" class="form-label">
            Video - Archivo
          </label>
          <input 
            type="file" 
            class="form-control" 
            id="projectVideoFile" 
            accept="video/*"
          />
          <small class="text-muted">MP4, AVI, MKV (máximo 50MB)</small>
        </div>

        <!-- Botón Submit con estado de carga -->
        <button type="submit" class="btn btn-primary w-100 mt-4" id="submitBtn">
          <i class="bi bi-upload me-2"></i> Subir Proyecto
        </button>
      </form>
    </div>

    <!-- Estado de carga -->
    <div id="loadingAlert" class="alert alert-info mt-3" style="display: none;">
      <div class="spinner-border spinner-border-sm me-2" role="status">
        <span class="visually-hidden">Cargando...</span>
      </div>
      <span id="loadingText">Subiendo archivo...</span>
    </div>

    <!-- Alerta de éxito -->
    <div id="successAlert" class="alert alert-success mt-3" style="display: none;">
      <i class="bi bi-check-circle me-2"></i>
      <strong>¡Éxito!</strong> Tu proyecto se ha subido correctamente.
    </div>

    <!-- Alerta de error -->
    <div id="errorAlert" class="alert alert-danger mt-3" style="display: none;">
      <i class="bi bi-exclamation-circle me-2"></i>
      <strong>Error:</strong> <span id="errorMessage"></span>
    </div>
  </div>

  <!-- Footer -->
  <%- include('partials/footer', { user: user }) %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    // Pasar configuración de Supabase al frontend
    const SUPABASE_URL = '<%= process.env.SUPABASE_URL %>';
    const SUPABASE_KEY = '<%= process.env.SUPABASE_KEY %>';
  </script>
  <script src="/js/proyectos.js"></script>
</body>
</html>
