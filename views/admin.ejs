<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Panel Administrador - CESDE</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"/>
  <style>
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding-bottom: 50px;
    }
    .container {
      background: white;
      border-radius: 16px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
      padding: 40px 20px;
    }
    .card {
      transition: all 0.3s ease;
      border-radius: 12px;
      overflow: hidden;
      border: none;
      height: 100%;
    }
    .card:hover {
      transform: translateY(-8px);
      box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
    }
    .card-body {
      padding: 25px;
    }
    .display-4 {
      font-size: 3rem;
    }
    .btn {
      border-radius: 8px;
      padding: 10px 24px;
      font-weight: 600;
      transition: all 0.2s ease;
    }
    .btn:hover:not(:disabled) {
      transform: translateY(-2px);
    }
    .btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }
    .stats-card {
      text-align: center;
      padding: 20px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border-radius: 12px;
      margin-bottom: 20px;
    }
    .stats-card h3 {
      margin: 10px 0 0 0;
      font-size: 2rem;
      font-weight: bold;
    }
    .stats-card p {
      margin: 5px 0;
      opacity: 0.9;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <div class="text-center mb-5">
      <i class="bi bi-shield-check display-1 text-success"></i>
      <h1 class="mt-3 fw-bold">Panel de Administrador</h1>
      <p class="lead text-muted">Sección exclusiva para administradores del sistema</p>
    </div>

    <!-- Información del Usuario -->
    <div class="alert alert-info mb-4">
      <div class="d-flex align-items-center">
        <i class="bi bi-person-circle fs-3 me-3"></i>
        <div>
          <strong>Sesión activa:</strong> <%= user.nombres_y_apellidos %><br>
          <small class="text-muted">ID: <%= user.id_usuarios %> | Email: <%= user.correo_electronico %></small>
        </div>
      </div>
    </div>

    <!-- Estadísticas Rápidas -->
    <div class="row mb-4" id="statsContainer">
      <div class="col-md-3">
        <div class="stats-card">
          <i class="bi bi-people-fill" style="font-size: 2rem;"></i>
          <h3 id="totalUsers">--</h3>
          <p>Usuarios Registrados</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stats-card">
          <i class="bi bi-folder-fill" style="font-size: 2rem;"></i>
          <h3 id="totalProjects">--</h3>
          <p>Proyectos Activos</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stats-card">
          <i class="bi bi-shield-lock-fill" style="font-size: 2rem;"></i>
          <h3><%= user.rol_usuario_administrador ? 'Admin' : 'SuperAdmin' %></h3>
          <p>Tu Rol</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stats-card">
          <i class="bi bi-calendar-check-fill" style="font-size: 2rem;"></i>
          <h3 id="currentDate">--</h3>
          <p>Fecha Actual</p>
        </div>
      </div>
    </div>

    <!-- Acciones Principales -->
    <div class="row g-4 mb-4">
      <!-- Gestión de Usuarios -->
      <div class="col-md-4">
        <div class="card text-center shadow-sm border-primary border-2">
          <div class="card-body">
            <i class="bi bi-people-fill display-4 text-primary mb-3"></i>
            <h5 class="card-title fw-bold">Gestión de Usuarios</h5>
            <p class="card-text small">Administra usuarios, roles y permisos del sistema</p>
            <div class="d-grid gap-2">
              <a href="/dashboard" class="btn btn-primary">
                <i class="bi bi-gear-fill me-1"></i> Ir al Dashboard
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Gestión de Proyectos -->
      <div class="col-md-4">
        <div class="card text-center shadow-sm border-info border-2">
          <div class="card-body">
            <i class="bi bi-folder-fill display-4 text-info mb-3"></i>
            <h5 class="card-title fw-bold">Gestión de Proyectos</h5>
            <p class="card-text small">Ver, editar o eliminar proyectos estudiantiles</p>
            <div class="d-grid gap-2">
              <a href="/proyectos" class="btn btn-info">
                <i class="bi bi-folder-open me-1"></i> Ver Proyectos
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Configuración -->
      <div class="col-md-4">
        <div class="card text-center shadow-sm border-warning border-2">
          <div class="card-body">
            <i class="bi bi-gear-fill display-4 text-warning mb-3"></i>
            <h5 class="card-title fw-bold">Configuración</h5>
            <p class="card-text small">Ajustes del sistema y preferencias</p>
            <div class="d-grid gap-2">
              <button class="btn btn-warning" disabled>
                <i class="bi bi-wrench me-1"></i> Próximamente
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Acciones Secundarias -->
    <div class="row g-4 mb-4">
      <!-- Licencias Creative Commons -->
      <div class="col-md-4">
        <div class="card text-center shadow-sm border-success border-2">
          <div class="card-body">
            <i class="bi bi-file-earmark-check-fill display-4 text-success mb-3"></i>
            <h5 class="card-title fw-bold">Licencias CC</h5>
            <p class="card-text small">Gestiona licencias Creative Commons</p>
            <div class="d-grid gap-2">
              <a href="/licencias" class="btn btn-success">
                <i class="bi bi-file-earmark me-1"></i> Ver Licencias
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Reportes -->
      <div class="col-md-4">
        <div class="card text-center shadow-sm border-secondary border-2">
          <div class="card-body">
            <i class="bi bi-graph-up display-4 text-secondary mb-3"></i>
            <h5 class="card-title fw-bold">Reportes</h5>
            <p class="card-text small">Estadísticas y análisis del sistema</p>
            <div class="d-grid gap-2">
              <button class="btn btn-secondary" disabled>
                <i class="bi bi-bar-chart me-1"></i> Próximamente
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Base de Datos -->
      <div class="col-md-4">
        <div class="card text-center shadow-sm border-dark border-2">
          <div class="card-body">
            <i class="bi bi-database-fill display-4 text-dark mb-3"></i>
            <h5 class="card-title fw-bold">Base de Datos</h5>
            <p class="card-text small">Backups y mantenimiento del sistema</p>
            <div class="d-grid gap-2">
              <button class="btn btn-dark" disabled>
                <i class="bi bi-cloud-arrow-down me-1"></i> Próximamente
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Acciones Rápidas -->
    <div class="card mb-4 border-0 bg-light">
      <div class="card-header bg-light border-0">
        <h5 class="mb-0">Acciones Rápidas</h5>
      </div>
      <div class="card-body">
        <div class="row g-2">
          <div class="col-auto">
            <a href="/dashboard" class="btn btn-sm btn-outline-primary">
              <i class="bi bi-people me-1"></i> Usuarios
            </a>
          </div>
          <div class="col-auto">
            <a href="/proyectos" class="btn btn-sm btn-outline-info">
              <i class="bi bi-folder me-1"></i> Proyectos
            </a>
          </div>
          <div class="col-auto">
            <a href="/licencias" class="btn btn-sm btn-outline-success">
              <i class="bi bi-file-earmark me-1"></i> Licencias
            </a>
          </div>
          <div class="col-auto">
            <a href="/welcome" class="btn btn-sm btn-outline-secondary">
              <i class="bi bi-house me-1"></i> Inicio
            </a>
          </div>
          <% if (user.rol_usuario_superadministrador) { %>
          <div class="col-auto">
            <a href="/superadmin/monitor" class="btn btn-sm btn-outline-danger">
              <i class="bi bi-graph-up me-1"></i> Monitor
            </a>
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Información Importante -->
    <div class="alert alert-warning" role="alert">
      <i class="bi bi-exclamation-triangle-fill me-2"></i>
      <strong>Recordatorio:</strong> Como administrador, tienes acceso a funciones críticas del sistema. Por favor, usa estas herramientas responsablemente y respeta la privacidad de los usuarios.
    </div>

    <!-- Botones de Navegación Principal -->
    <div class="mt-5 text-center">
      <a href="/welcome" class="btn btn-outline-secondary me-2 btn-lg">
        <i class="bi bi-house-fill me-1"></i> Volver al Inicio
      </a>
      <a href="/logout" class="btn btn-outline-danger btn-lg">
        <i class="bi bi-box-arrow-right me-1"></i> Cerrar Sesión
      </a>
    </div>
  </div>

  <%- include('partials/footer', { user: user }) %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Cargar estadísticas
    async function loadStats() {
      try {
        const usersRes = await fetch('/api/system/stats/users', { credentials: 'include' });
        const usersData = await usersRes.json();
        document.getElementById('totalUsers').textContent = usersData.total_users || 0;

        const projectsRes = await fetch('/api/system/stats/projects', { credentials: 'include' });
        const projectsData = await projectsRes.json();
        document.getElementById('totalProjects').textContent = projectsData.total_projects || 0;

        const today = new Date();
        document.getElementById('currentDate').textContent = today.toLocaleDateString('es-ES');
      } catch (error) {
        console.error('Error cargando estadísticas:', error);
      }
    }

    // Inicializar
    document.addEventListener('DOMContentLoaded', loadStats);
  </script>
</body>
</html>
